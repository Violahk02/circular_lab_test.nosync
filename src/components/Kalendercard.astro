---
//ts@no-check
import "../styles/general.css";
const { event } = Astro.props;
---

<article>
  <h1>{new Date(event.event_date).getDate().toString().padStart(2, "0")}</h1>
  <img src="../repaircafe_img.svg" alt="" />
  <div class="info">
    <h2>{event.event_title}</h2>
    <h3>{event.event_category}</h3>
    <p>
      {event.event_start.slice(0, 5)} - {event.event_end.slice(0, 5)}
    </p>
    <a href="">LÃ¦s mere her</a>
  </div>
</article>

<style>
  a {
    background-color: #ff671f;
    border: none;
    border-radius: 20px;
    padding: 10px;
    text-decoration: none;
    color: #233249;
  }

  h1 {
    font-size: 80px;
    padding-left: 5px;
  }
  h2,
  p {
    padding-bottom: 5px;
  }

  h3 {
    color: #ff671f;
    padding-bottom: 5px;
  }

  article {
    border-right: 2px solid black;
    width: 239px;
  }

  .info {
    padding: 10px;
  }
</style>
