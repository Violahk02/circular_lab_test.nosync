    background-color: var(--secondary-color);
    transition: 0.3s;
  }
  .knap_tilmelding {
    text-decoration: none;
    color: var(--secondary-color);
    font-family: "Roboto Condensed_Black", sans-serif;
  }
  .knap_tilmelding:hover {
    color: var(--primary-color);
    transition: 0.3s;
  }
  /* ------COLLAGE-------- */
