    padding: 5px;
    border-radius: 20px;
    margin: 2rem 6rem;
    display: flex;
    justify-content: center; /* Centrerer horisontalt */
    align-items: center; /* Centrerer vertikalt */
  }
  .knap_t_events:hover {
    background-color: var(--secondary-color);
    transition: 0.3s;
  }
  .knap {
    text-decoration: none;
    color: var(--secondary-color);
    padding: 15px;
    font-family: "Roboto Condensed_Black", sans-serif;
  }
  .knap:hover {
    color: var(--primary-color);
    transition: 0.3s;
  }
  img {
    width: 100%;
  }
  .img1 {
    grid-column: span 2;
  }
  .img2 {
    grid-row: 2;
  }
  .img3 {
    grid-column: 2;
    grid-row: 2;
    padding-top: 20px;
  }
  .img4_kort {
    grid-column: 1;
    grid-row: 4;
    padding-top: 20px;
  }
  .img_praktisk {
    grid-column: 2;
    grid-row: 3;
  }
  /* ------DROPDOWN CONTAINER--------- */
  .orange_container {
    background-color: var(--third-color);
  }
  .dropdown_container {
    padding: 1rem 2rem;
  }
  .mobil_overskrift {
    padding: 20px 5px;
    text-align: center;
  }
  .dropdown {
    margin-bottom: 10px;
    width: 100%;
  }
  .dropdown-btn {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    font-family: "Roboto Condensed_Black", sans-serif;
    padding: 15px;
    margin: 5px;
    width: 100%;
    border-radius: 10px;
    border: none;
    outline: none;
    font-size: 16px;
    cursor: pointer;
  }
  .dropdown-btn:hover {
    color: var(--third-color);
    transition: 0.3s;
  }
  .dropdown-content {
    display: none;
    padding: 10px;
    margin: 0px 2px;
    border-radius: 20px;
    background-color: var(--primary-color);
    border-left: 3px solid var(--primary-color);
  }
  .dropdown.active .dropdown-content {
    display: block;
  }
  /* ---------MATERIALEBIBLIOTEK-------- */
  .knap_t_materiale {
    font-family: "Roboto Condensed_Black", sans-serif;
    font-weight: 100;
    font-size: 16px;
    background-color: var(--third-color);
    padding: 5px;
    border-radius: 20px;
    margin: 2rem 6rem;
    display: flex;
    justify-content: center; /* Centrerer horisontalt */
    align-items: center; /* Centrerer vertikalt */
  }
